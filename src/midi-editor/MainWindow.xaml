<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="MIDI File Editor" Width="640" Height="480">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Command="{Binding OpenCommand}" />
                <Separator />
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." Command="{Binding AboutCommand}" />
            </MenuItem>
        </Menu>

        <DataGrid Name="EventsGrid" Grid.Row="1" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" IsReadOnly="True" />
                <DataGridTextColumn Header="t" Binding="{Binding AbsoluteTime}" IsReadOnly="True" />
                <DataGridTextColumn Header="Δt" Binding="{Binding DeltaTime}" IsReadOnly="True" />
                <DataGridTextColumn Header="Command" Binding="{Binding CommandCode}" IsReadOnly="True" />
                <DataGridTextColumn Header="Channel" Binding="{Binding Channel}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
